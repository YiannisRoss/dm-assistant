<h1>Create new map</h1>


<%= form_with model: @map do |f| %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image, required: true %>
  </div>

  <%= f.hidden_field :user_id, :value => @user.id%>

  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>